      '#options' => _ec_layouts_get_mode_options(NULL, 'background color'),
      '#default_value' => $plugin->getThirdPartySetting('ec_layouts', 'region_color_mode', key(_ec_layouts_get_mode_options(NULL, 'background color'))),
