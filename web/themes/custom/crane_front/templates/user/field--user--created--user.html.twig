{% extends 'field.html.twig' %}
{% block fieldSingleNo %}
<div class="user-created">
  <span class="inline-label">Joined:</span> {{- item.content -}}
</div>
<div class="user-roles">
	<span class="inline-label">Role(s):</span>
	{%- if 'administrator' in element['#object'].getroles -%}
		<span class="role">Administrator</span>
	{%- endif -%}
	{%- if 'senior_editor' in element['#object'].getroles -%}
		<span class="role">Senior Editor</span>
	{%- endif -%}
	{%- if 'editor' in element['#object'].getroles -%}
		<span class="role">Editor</span>
	{%- endif -%}
</div>
<div class="edit-link">
	<a href="/user/{{ element['#object'].uid.0.value }}/edit" class="button-outline">Edit Profile</a>
</div>
{% endblock %}

