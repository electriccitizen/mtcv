{
  "name": "drupal-composer/drupal-project",
  "description": "Install drops-8 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "php": ">=7.0.8",
    "composer/installers": "^1.0.20",
    "cweagans/composer-patches": "^1.0",
    "drupal/adminimal_admin_toolbar": "^1.9",
    "drupal/adminimal_theme": "^1.4",
    "drupal/auto_entitylabel": "^3.0",
    "drupal/build_hooks": "^2.2",
    "drupal/chosen": "^3.0",
    "drupal/chosen_lib": "^3.0",
    "drupal/color_field": "^2.0",
    "drupal/config_direct_save": "^1.0",
    "drupal/config_ignore": "^2.1",
    "drupal/config_installer": "^1.0",
    "drupal/console": "^1",
    "drupal/core": "^8.9",
    "drupal/core-composer-scaffold": "^8.9",
    "drupal/core-recommended": "^8.9",
    "drupal/devel": "^4.0",
    "drupal/disable_messages": "^2.0",
    "drupal/entity_redirect": "^1.5",
    "drupal/entity_reference_layout": "^1.0@alpha",
    "drupal/field_group": "~3.0-rc1",
    "drupal/gatsby": "^1.0@alpha",
    "drupal/link_attributes": "^1.7",
    "drupal/linkit": "^4.3",
    "drupal/menu_block": "^1.5",
    "drupal/metatag": "^1.9",
    "drupal/migrate_file": "^1.1",
    "drupal/migrate_plus": "^4.2",
    "drupal/migrate_tools": "^4.1",
    "drupal/paragraphs": "^1.8",
    "drupal/pathauto": "^1.6",
    "drupal/redirect": "^1.3",
    "drupal/responsive_preview": "~1.0@alpha",
    "drupal/simple_block": "^1.0@beta",
    "drupal/structure_sync": "^1.16",
    "drupal/taxonomy_import": "^1.0",
    "drupal/text_summary_options": "^1.0",
    "drupal/tui_editor": "^1.9",
    "drupal/twig_tweak": "^2.4",
    "drupal/views_bulk_operations": "^3.2",
    "drupal/views_infinite_scroll": "^1.5",
    "drush-ops/behat-drush-endpoint": "^9.3",
    "drush/drush": "~8",
    "egulias/email-validator": "^2",
    "kint-php/kint": "^3.3",
    "pantheon-systems/quicksilver-pushback": "~1",
    "rvtraveller/qs-composer-installer": "^1.1",
    "vlucas/phpdotenv": "^3.3",
    "zaporylie/composer-drupal-optimizations": "^1.0"
  },
  "require-dev": {
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "drupal/coder": "^8.3.1",
    "drupal/drupal-extension": "^3.1",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "mikey179/vfsstream": "^1.2",
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^3.4.0",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --optimize-autoloader --no-dev"
    ],
    "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
    "code-sniff": [
      "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
      "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom",
      "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
      "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/themes/custom"
    ],
    "unit-test": "echo 'No unit test step defined.'",
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
    "post-install-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
    },
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
        "drush pm-enable config_direct_save simple_block --yes",
        "drush pm-uninstall block_content --yes"
      ],
      "export-configuration": "drush config-export --yes"
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        ".htaccess",
        "web.config"
      ],
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/sites/default/default.services.yml": false,
        "[web-root]/sites/default/default.settings.php": false
      }
    },
    "patches": {
      "drupal/core":{
        "Media Library error when trying to Insert Selected from the the media library view.": "https://www.drupal.org/files/issues/2020-01-31/media-library-insert-selected-3081319-6.patch",
        "Duplicated summary item when linking to content with the MediaThumbnailFormatter": "https://www.drupal.org/files/issues/2019-08-29/core-elminate_duplicated_summary-3078030-2-D8.patch"
      },
      "drupal/menu_block": {
        "Enable using active menus as menu block titles": "https://www.drupal.org/files/issues/menu_block-label_configuration-2809699-51.patch",
        "Enable link functionality on menu block titles": "https://www.drupal.org/files/issues/menu_block-title_as_link-1-d8.patch"
      }
    },
    "enable-patching": true

  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "7.3"
    }
  }
}
